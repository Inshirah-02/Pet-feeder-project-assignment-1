import time

def pet_feeder():  # This is a FUNCTION
    has_food = True
    bowl_weight = 0
    feeding_time = time.strftime("%H:%M")  # Use current time

    print("ðŸ¾ Pet Feeder Activated! Press Ctrl+C to stop.")
    
    try:
        while True:
            current_time = time.strftime("%H:%M")
            if current_time == feeding_time:
                print("\nâ° It's feeding time!")
                if not has_food:
                    print("ðŸš¨ ALERT: No food in container!")
                else:
                    print("ðŸ• Dispensing food...")
                    bowl_weight = 150
                    print("â³ Waiting to see if pet eats...")
                    time.sleep(5)
                    if bowl_weight >= 150:
                        print("ðŸš¨ ALERT: Food not eaten!")
            time.sleep(10)
    
    except KeyboardInterrupt:
        print("\nðŸ”´ Feeder stopped.")

# Call the FUNCTION properly:
pet_feeder()  # âœ… No ".run()" needed!
